<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.RegisterPage"
             Title="Registrieren">
    
    <ContentPage.Content>
        <StackLayout Padding="40,0,40,0" VerticalOptions="Center" Spacing="20">
            <Entry Placeholder="Benutzername" x:Name="UsernameEntry"/>
            <Entry Placeholder="E-Mail Adresse" x:Name="EMailEntry"/>
            <Entry Placeholder="Passwort" IsPassword="True" x:Name="PasswordEntry"/>
            <Entry Placeholder="Passwort wiederholen" IsPassword="True" x:Name="PasswordRepeatEntry"/>
            <Label Text="Die Passwörter stimmen nicht überein!" TextColor="Red" IsVisible="false" x:Name="HintPasswordsDontMatch"/>
            <Label Text="Bitte fülle alle Felder aus!" TextColor="Red" IsVisible="false" x:Name="HintFillAllFields"/>
            <Button VerticalOptions="Center" Text="Registrieren" Clicked="OnRegisterClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
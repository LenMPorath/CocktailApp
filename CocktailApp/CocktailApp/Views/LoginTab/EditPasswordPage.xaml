<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.EditPasswordPage"
             Title="Passwort ändern">

    <ContentPage.Content>
        <StackLayout Padding="40,0,40,0" VerticalOptions="Center" Spacing="20">
            <Entry Placeholder="Altes Passwort" x:Name="OldPasswordEntry" IsPassword="true"/>
            <Entry Placeholder="Neues Passwort" x:Name="NewPasswordEntry" IsPassword="true"/>
            <Entry Placeholder="Neues Passwort wiederholen" x:Name="RepeatNewPasswordEntry" IsPassword="true"/>
            <Button VerticalOptions="Center" Text="Passwort ändern" x:Name="SaveButton" Clicked="OnSaveButtonClicked" Margin="0,25,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.EditAccountPage"
             Title="Konto bearbeiten">

    <ContentPage.Content>
        <StackLayout Padding="40,0,40,0" VerticalOptions="Center">
            <Label Text="E-Mail Adresse"  Margin="0,0,0,0"/>
            <Entry Placeholder="E-Mail" Keyboard="Email" x:Name="EMailEntry" Margin="0,0,0,15" />
            <Label Text="Benutzername" Margin="0,0,0,0"/>
            <Entry Placeholder="Benutzername" x:Name="UsernameEntry" Margin="0,0,0,40"/>
            <Button VerticalOptions="Center" Text="Passwort ändern" x:Name="EditPasswordButton" Clicked="OnEditPasswordButtonClicked" Margin="0,0,0,20"/>
            <Button VerticalOptions="Center" Text="Speichern" x:Name="SaveButton" Clicked="OnSaveButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
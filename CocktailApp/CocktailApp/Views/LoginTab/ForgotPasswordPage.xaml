<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.ForgotPasswordPage"
             Title="Passwort vergessen">

    <ContentPage.Content>
        <StackLayout Padding="40,0,40,0" VerticalOptions="Center" Spacing="20">
            <Label Text="Gib bitte deine E-Mail Adresse an, mit welcher du dich in der CocktailApp ursprünglich registriert hast." FontSize="16" />
            <Label Text="Anschließend wird ein Code an deine E-Mail geschickt, welchen du hier wieder eingeben musst!" FontSize="16" />
            <Entry Placeholder="E-Mail Adresse" x:Name="EMailEntry"/>
            <Label Text="Bitte gib deine E-Mail Adresse an!" TextColor="Red" IsVisible="false" x:Name="HintFillAllEMailFields"/>
            <Button VerticalOptions="Center" Text="Passwort vergessen" Clicked="OnForgotPasswordClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>